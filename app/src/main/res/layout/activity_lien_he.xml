<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LienHeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Contact Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông Tin Liên Hệ"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="30dp" />

        <!-- Admin Image -->
        <ImageView
            android:id="@+id/imgAdminAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/avatar_admin"

            android:padding="10dp" />
        <!--        android:background="@drawable/background_button"-->

        <!-- Admin Name -->
        <TextView
            android:id="@+id/tvAdminName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Quản Trị"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Admin Role -->
        <TextView
            android:id="@+id/tvAdminRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản trị viên hệ thống"
            android:textSize="16sp"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Contact Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvAdminEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: admin@example.com"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvAdminPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Điện thoại: +84 123 456 789"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location_on"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvAdminAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ: Số 54,Thanh Xuân, Hà Nội"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_drag_handle_24"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvWorkHours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thời gian làm việc: 8:00 - 17:00 (T2-T7)"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Contact Button -->
        <Button
            android:id="@+id/btnContactAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liên hệ ngay"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_500"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <!-- Back to Main Button -->
        <Button
            android:id="@+id/btnBackToMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại màn hình chính"
            android:textSize="12sp"
            android:backgroundTint="#FF4454"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <!-- Support Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hỗ trợ 24/7"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúng tôi luôn sẵn sàng hỗ trợ bạn bất cứ lúc nào. Vui lòng liên hệ với chúng tôi nếu bạn có bất kỳ câu hỏi hoặc vấn đề nào."
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</ScrollView>

